<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Core Alarm Permissions -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Permissions to Wake Up Screen and Show Over Lock Screen -->
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" /> 
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    
    <!-- Foreground Service & Vibration -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ALSAlarm">
        <activity
            android:name="com.sldevelopers.alsalarm.MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.sldevelopers.alsalarm.AlarmScreenActivity"
            android:exported="false"
            android:showWhenLocked="true"
            android:theme="@style/Theme.ALSAlarm.AlarmScreen"
            android:turnScreenOn="true" />

        <receiver android:name="com.sldevelopers.alsalarm.AlarmReceiver" android:enabled="true" android:exported="false" />

        <service 
            android:name="com.sldevelopers.alsalarm.AlarmService" 
            android:enabled="true" 
            android:foregroundServiceType="mediaPlayback"/>

    </application>

</manifest>